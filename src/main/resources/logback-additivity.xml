<included>

    <appender name="stdout_additivity" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[additivity] ${log_pattern}</pattern>
        </encoder>
    </appender>

    <!-- 默认累加 additivity="false" -->
    <logger name="additivity">
        <appender-ref ref="stdout_additivity" />
    </logger>

</included>